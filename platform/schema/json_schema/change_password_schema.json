{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Change Password Schema",
  "description": "Schema for validating password change requests from authenticated users who know their current password",
  "required": [
    "email",
    "current_password",
    "new_password",
    "confirm_password"
  ],
  "properties": {
    "email": {
      "type": "string",
      "format": "email",
      "description": "User email for identification"
    },
    "current_password": {
      "type": "string",
      "minLength": 1,
      "description": "Current password (the one user knows and wants to change)"
    },
    "new_password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 128,
      "description": "New password (min 8 characters)"
    },
    "confirm_password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 128,
      "description": "Password confirmation (must match new_password)"
    }
  },
  "additionalProperties": false
}
