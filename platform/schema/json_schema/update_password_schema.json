{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Update Password Schema",
  "description": "Schema for validating password update requests with Keycloak token",
  "required": [
    "token",
    "new_password",
    "confirm_password"
  ],
  "properties": {
    "token": {
      "type": "string",
      "description": "Keycloak action token from password reset email"
    },
    "new_password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 128,
      "description": "New password (min 8 characters)"
    },
    "confirm_password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 128,
      "description": "Password confirmation (must match new_password)"
    }
  },
  "additionalProperties": false
}
